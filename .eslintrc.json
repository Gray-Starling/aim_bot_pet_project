{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["react-app", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "max-len": [
            1,
            {
                "code": 100,
                "comments": 150,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-unused-vars": 2,
        "no-undef": 2,
        "react/prop-types": 0,
        "no-debugger": 2,
        "no-dupe-else-if": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "eqeqeq": 2,
        "no-alert": 2,
        "no-undef-init": 2,
        "no-useless-escape": 2,
        "array-callback-return": 2,
        "react-hooks/exhaustive-deps": 2,
        "sort-imports": [
            1,
            {
                "ignoreCase": false,
                "ignoreDeclarationSort": false,
                "ignoreMemberSort": false,
                "memberSyntaxSortOrder": ["none", "all", "multiple", "single"],
                "allowSeparatedGroups": false
            }
        ]
    }
}
